	int isPalindrome(string S)
	{
	    // Your code goes here
	    // recursive method
	   // return isPalin(0,S.length()-1,S);
	   for(int i=0;i<S.length()/2;i++) {
	       if(S[i]!=S[S.length()-i-1]) return 0;
	   }
	   return 1;
	}

};
